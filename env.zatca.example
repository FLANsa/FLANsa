# ZATCA Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# ZATCA Environment Settings
# ===========================================
ZATCA_ENV=sandbox
# Options: sandbox | production

# ===========================================
# ZATCA API Endpoints
# ===========================================
ZATCA_REPORTING_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/simulation
# Sandbox: https://gw-fatoora.zatca.gov.sa/e-invoicing/simulation
# Production: https://gw-fatoora.zatca.gov.sa/e-invoicing/production

# ===========================================
# EGS Unit Configuration
# ===========================================
EGS_UNIT_ID=YOUR_EGS_UNIT_ID_HERE
# Get this from ZATCA Fatoora portal after creating EGS Unit

# ===========================================
# CSID Certificate Configuration
# ===========================================
CSID_CERT_PFX_BASE64=YOUR_BASE64_PFX_HERE
# Base64 encoded PFX certificate from ZATCA
# Generate using: base64 -w 0 zatca_cert.pfx

CSID_CERT_PASSWORD=YourSecurePassword123!
# Password for the PFX certificate

# ===========================================
# Organization Details
# ===========================================
ORG_VAT_NUMBER=300000000000003
# Your organization's VAT number

ORG_NAME_AR=مطعم قيد
# Organization name in Arabic

ORG_NAME_EN=Qayd Restaurant
# Organization name in English

ORG_COUNTRY=SA
# Country code (SA for Saudi Arabia)

ORG_CRN=1010101010
# Commercial Registration Number

ORG_ADDRESS_AR=الرياض، المملكة العربية السعودية
# Organization address in Arabic

# ===========================================
# ZATCA API Authentication
# ===========================================
ZATCA_OTP=YOUR_OTP_HERE
# OTP from ZATCA Fatoora portal

ZATCA_SUBSCRIPTION_KEY=YOUR_SUBSCRIPTION_KEY_HERE
# Subscription key from ZATCA Fatoora portal

# ===========================================
# Security Settings
# ===========================================
ZATCA_CERT_EXPIRY_ALERT_DAYS=30
# Days before certificate expiry to send alert

# ===========================================
# Development Settings
# ===========================================
NODE_ENV=development
# Options: development | production

# ===========================================
# Firebase Configuration (if using)
# ===========================================
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
# Server port

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=your_database_url
# Database connection string

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
# Options: error | warn | info | debug

# ===========================================
# Backup Configuration
# ===========================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ===========================================
# Monitoring Configuration
# ===========================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:5173
# Frontend URL for CORS

# ===========================================
# SSL Configuration (Production)
# ===========================================
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# ===========================================
# Email Configuration (for alerts)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
ALERT_EMAIL=admin@yourcompany.com

# ===========================================
# Webhook Configuration
# ===========================================
WEBHOOK_URL=https://your-webhook-url.com/zatca
WEBHOOK_SECRET=your_webhook_secret

# ===========================================
# Cache Configuration
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# ===========================================
# File Upload Configuration
# ===========================================
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# ===========================================
# Session Configuration
# ===========================================
SESSION_SECRET=your_session_secret_key
SESSION_MAX_AGE_MS=86400000

# ===========================================
# API Versioning
# ===========================================
API_VERSION=v1
API_PREFIX=/api

# ===========================================
# Feature Flags
# ===========================================
ENABLE_ZATCA_COMPLIANCE=true
ENABLE_MULTI_TENANT=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# ===========================================
# Development Tools
# ===========================================
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
DEBUG_MODE=false

# ===========================================
# Performance Settings
# ===========================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
KEEP_ALIVE_TIMEOUT_MS=5000

# ===========================================
# Security Headers
# ===========================================
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# ===========================================
# Backup and Recovery
# ===========================================
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true

# ===========================================
# Monitoring and Alerting
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
ALERT_MANAGER_URL=http://localhost:9093

# ===========================================
# Logging and Debugging
# ===========================================
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# ===========================================
# Database Connection Pool
# ===========================================
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000
DB_POOL_ACQUIRE_TIMEOUT_MS=60000

# ===========================================
# External Services
# ===========================================
EXTERNAL_API_TIMEOUT_MS=5000
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RETRY_DELAY_MS=1000

# ===========================================
# Error Handling
# ===========================================
ERROR_STACK_TRACE=true
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_URL=https://your-error-reporting-service.com

# ===========================================
# Maintenance Mode
# ===========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ===========================================
# Health Check Endpoints
# ===========================================
HEALTH_CHECK_PATH=/health
READINESS_CHECK_PATH=/ready
LIVENESS_CHECK_PATH=/live

# ===========================================
# Metrics and Analytics
# ===========================================
METRICS_ENABLED=true
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING=true

# ===========================================
# Internationalization
# ===========================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
TIMEZONE=Asia/Riyadh

# ===========================================
# Currency and Locale
# ===========================================
DEFAULT_CURRENCY=SAR
CURRENCY_DECIMAL_PLACES=2
NUMBER_FORMAT=ar-SA

# ===========================================
# Business Rules
# ===========================================
MIN_INVOICE_AMOUNT=0.01
MAX_INVOICE_AMOUNT=999999.99
VAT_RATE=0.15
ROUNDING_METHOD=round

# ===========================================
# Integration Settings
# ===========================================
INTEGRATION_TIMEOUT_MS=10000
INTEGRATION_RETRY_ATTEMPTS=3
INTEGRATION_RETRY_DELAY_MS=2000

# ===========================================
# Notification Settings
# ===========================================
NOTIFICATION_ENABLED=true
NOTIFICATION_CHANNELS=email,sms,webhook
NOTIFICATION_RETRY_ATTEMPTS=3

# ===========================================
# Audit and Compliance
# ===========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
COMPLIANCE_MODE=strict

# ===========================================
# Performance Optimization
# ===========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
COMPRESSION_LEVEL=6

# ===========================================
# Security Policies
# ===========================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL_CHARS=true
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5

# ===========================================
# Data Privacy
# ===========================================
DATA_RETENTION_DAYS=2555
PII_ENCRYPTION_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true

# ===========================================
# Disaster Recovery
# ===========================================
DR_ENABLED=true
DR_BACKUP_INTERVAL_HOURS=6
DR_RECOVERY_TIME_OBJECTIVE_MINUTES=60

# ===========================================
# Load Balancing
# ===========================================
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_INTERVAL_SECONDS=30

# ===========================================
# Container Configuration
# ===========================================
CONTAINER_MEMORY_LIMIT=512M
CONTAINER_CPU_LIMIT=0.5
CONTAINER_RESTART_POLICY=always

# ===========================================
# Network Configuration
# ===========================================
NETWORK_TIMEOUT_MS=30000
NETWORK_RETRY_ATTEMPTS=3
NETWORK_RETRY_DELAY_MS=1000

# ===========================================
# Storage Configuration
# ===========================================
STORAGE_TYPE=local
STORAGE_PATH=./storage
STORAGE_MAX_SIZE_MB=1000

# ===========================================
# Queue Configuration
# ===========================================
QUEUE_ENABLED=true
QUEUE_TYPE=redis
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY_MS=5000

# ===========================================
# Job Processing
# ===========================================
JOB_PROCESSING_ENABLED=true
JOB_CONCURRENCY=5
JOB_TIMEOUT_MS=300000

# ===========================================
# Real-time Features
# ===========================================
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8080
WEBSOCKET_HEARTBEAT_INTERVAL_MS=30000

# ===========================================
# API Documentation
# ===========================================
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
API_DOCS_THEME=swagger

# ===========================================
# Testing Configuration
# ===========================================
TEST_MODE=false
TEST_DATABASE_URL=test_db_url
TEST_TIMEOUT_MS=10000

# ===========================================
# Development Tools
# ===========================================
HOT_RELOAD_ENABLED=true
SOURCE_MAPS_ENABLED=true
DEBUG_BREAKPOINTS_ENABLED=false

# ===========================================
# Build Configuration
# ===========================================
BUILD_TARGET=production
BUILD_OPTIMIZATION=true
BUILD_SOURCE_MAPS=false

# ===========================================
# Deployment Configuration
# ===========================================
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_REGION=us-east-1

# ===========================================
# Scaling Configuration
# ===========================================
AUTO_SCALING_ENABLED=false
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=20

# ===========================================
# Cost Optimization
# ===========================================
COST_OPTIMIZATION_ENABLED=true
RESOURCE_MONITORING=true
COST_ALERT_THRESHOLD=100

# ===========================================
# Compliance and Governance
# ===========================================
COMPLIANCE_MODE=strict
GOVERNANCE_ENABLED=true
POLICY_ENFORCEMENT=true

# ===========================================
# End of Configuration
# ===========================================