# ZATCA Integration Environment Variables
# Copy this file to .env.local and fill in your actual values

# ZATCA Server Configuration
PORT=3001
NODE_ENV=development
ZATCA_ENVIRONMENT=sandbox

# ZATCA Base URLs
ZATCA_BASE_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/simulation
# For production: https://gw-fatoora.zatca.gov.sa/e-invoicing
ZATCA_ONBOARDING_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/developer-portal/onboarding
ZATCA_PRODUCTION_CSID_URL=https://gw-fatoora.zatca.gov.sa/e-invoicing/developer-portal/production/csids

# ZATCA CSID Credentials (from ERAD/Fatoora portal)
# Get these from the Compliance CSID API call
ZATCA_CSID_TOKEN=your_binary_security_token_here
ZATCA_CSID_SECRET=your_secret_here

# Production CSID Credentials (after compliance testing)
ZATCA_PROD_TOKEN=your_production_token_here
ZATCA_PROD_SECRET=your_production_secret_here

# Business Information
VAT_NUMBER=123456789012345
