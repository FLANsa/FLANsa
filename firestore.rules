rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }
    function userEmail() {
      return request.auth.token.email != null ? request.auth.token.email.toLowerCase() : "";
    }
    function hasOwnerRole() {
      return request.auth.token.role == "owner";
    }
    function isSuperAdmin() {
      return userEmail() == "admin@qayd.com";
    }
    function isAdminDashboard() {
      return hasOwnerRole() || isSuperAdmin();
    }

    // Users collection
    match /users/{uid} {
      allow read: if isAdminDashboard() || (isAuthed() && resource.data.tenantId == request.auth.token.tenantId);
      // Only admin dashboard can create/update/delete users
      allow create, update, delete: if isAdminDashboard();
    }

    // Tenants collection
    match /tenants/{tenantId} {
      allow read: if isAdminDashboard() || (isAuthed() && resource.data.id == request.auth.token.tenantId);
      allow create, update, delete: if isAdminDashboard();
    }

    // Settings by tenant (doc id = tenantId)
    match /settings/{tenantId} {
      allow read: if isAdminDashboard() || (isAuthed() && tenantId == request.auth.token.tenantId);
      allow create, update: if isAdminDashboard() || (isAuthed() && tenantId == request.auth.token.tenantId);
      allow delete: if isAdminDashboard();
    }

    // Items
    match /items/{itemId} {
      allow read: if isAdminDashboard() || (isAuthed() && resource.data.tenantId == request.auth.token.tenantId);
      allow create, update, delete: if isAdminDashboard() || (isAuthed() && request.resource.data.tenantId == request.auth.token.tenantId);
    }

    // Orders
    match /orders/{orderId} {
      allow read: if isAdminDashboard() || (isAuthed() && resource.data.tenantId == request.auth.token.tenantId);
      allow create, update, delete: if isAdminDashboard() || (isAuthed() && request.resource.data.tenantId == request.auth.token.tenantId);
    }

    // Customers
    match /customers/{customerId} {
      allow read: if isAdminDashboard() || (isAuthed() && resource.data.tenantId == request.auth.token.tenantId);
      allow create, update, delete: if isAdminDashboard() || (isAuthed() && request.resource.data.tenantId == request.auth.token.tenantId);
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
